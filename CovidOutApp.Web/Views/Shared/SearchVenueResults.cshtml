@model IEnumerable<CovidOutApp.Web.ViewModels.VenueViewModel>
<div class="container">
    
    @if (Model != null){
        
        <div class="row">Results: @Model.Count()</div>
        
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-3">
                    <div style="width:100%;height:100%">
                        <img src="logo.png"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="title"><strong>@item.Name</strong></div>
                    <div id="address">@item.Address</div>
                    <div id="tel">@item.Telephone</div>
                </div>
                <div class="col-md-3">
                    @Html.ActionLink("Details","Details","Venue",new { id = item.Id }, new {@class = "btn btn-primary"} )
                </div>
            </div>
            <hr/>
        }
    }
</div>